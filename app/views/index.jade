doctype html
html
  head
    meta(charset='utf-8')
    title Mirage
    meta(name='description' content='')
    meta(name='keywords' content='')
    meta(name='viewport' content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no')
    link(rel='stylesheet' href='/public/assets/css/main.css')
  body
    .wrapper
        .wrapper__panel.wrapper__panel--left
            video(muted='true' loop='true' src='/public/assets/video/background_loop-video.mp4')

        .wrapper__panel.wrapper__panel--right
            div.panel__contact
                a.link.link--effect(href='mailto:hello@thinkmirage.io')= contact
            div.panel__info
                .info__inner
                    img(src='/public/assets/img/logo--mirage.gif')
                    button.btn.btn--bordered.btn--trailer
                        svg
                            rect.rect--1(x='0' y='0' width='200' height='74')
                            rect.rect--2(x='0' y='0' width='200' height='74')
                            rect.rect--3(x='0' y='0' width='200' height='74')
                        | !{trailer}
            div.panel__newsletter
                p !{newsletter_title} 
                    a.link.link--help(href='#') (?)
                form.form(autocomplete='off')
                    .form__line
                        span.form__message-validation
                            svg(viewBox='0 0 8 8')
                                polygon(points='3.9,7.8 0,4.3 1.3,2.9 3.4,4.8 6.3,0.2 8,1.3')
                            | #{thanks}
                        input(type='email' name='email' placeholder='E-mail')
                        input(type='hidden' name='newsletter' value='1')
                        button(type='submit' disabled='disabled')
                            svg(viewBox='0 0 15 15')
                                polygon(points='13.5,7.5 8.4,12.6 5.5,12.6 9.5,8.6 1.5,8.6 1.5,6.4 9.5,6.4 5.5,2.4 8.4,2.4')
                p.newsletter__info
                    span.text-format.text-format--bold.text-format--color (?)
                    |  !{newsletter_info}
        .wrapper__load-layer
            .load__progress
        .wrapper__video-layer
            iframe(src='https://player.vimeo.com/video/131900816?title=0&byline=0&portrait=0' width='500' height='281' frameborder='0' webkitallowfullscreen mozallowfullscreen allowfullscreen)
            button.btn--close
                svg(viewBox='0 0 20 20')
                    polygon(points='13,10 20,17 17,20 10,13 3,20 0,17 7,10 0,3 3,0 10,7 17,0 20,3')

    script(src='https://cdnjs.cloudflare.com/ajax/libs/gsap/1.17.0/TweenLite.min.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/gsap/1.17.0/TimelineLite.min.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/gsap/1.17.0/plugins/CSSPlugin.min.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/gsap/1.17.0/easing/EasePack.min.js')

    script(src='/public/assets/js/app.js')