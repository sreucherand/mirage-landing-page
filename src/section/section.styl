@import '../utils/colors.styl'
@import '../utils/media-queries.styl'

.section {
    h1,
    h2,
    h3,
    h4 {
        margin: 0
    }
    h2 {
        color: $brown
        font-size: 2.8rem
        margin-bottom: 6.3rem
    }
    h3,
    h4 {
        font-size: 1.7rem
        line-height: 1.3em
        white-space: nowrap
        
        &:after {
            content: ''
            display: inline-block
        }
    }
    h4 {
        color: $light-grey
        font-style: italic
    }
    h3+h4 {
        margin-bottom: 4.2rem
    }

    img {
        width: 100%
    }
}
.section__column {
    margin-bottom: 7rem
    
    &--distribute {
        display: flex
        flex-direction: column
        justify-content: space-around
        
        img {
            display: block
            margin-left: auto
            margin-right: auto
            max-width: 9rem
        }
    }
}
.section__trailer {
    color: $brown
    line-height: 64px
    margin-bottom: 6.3rem
    text-align: center
    
    +over($mq.md) {
        display: none
    }
    
    a {
        color: inherit
        display: inline-block
        font-family: 'Maison Neue'
        font-size: 1.7rem
        font-weight: 700
        text-decoration: none
    }
    
    svg {
        display: inline
        fill: $brown
        margin-right: 2rem
        vertical-align: middle
        width: 64px
        
        line,
        circle {
            fill: none
            stroke: $brown
            stroke-width: 4
        }
    }
}
.section__list {
    line-height: 1.5em
    
    ul {
        margin: 0
        padding-left: 1.4rem
        
        li {
            list-style: none
        }
        li a {
            color: inherit
            text-decoration: none
        }
    }
    
    &--title {
        font-family: 'Maison Neue'
        font-weight: 700
        text-transform: uppercase
        
        li {
            position: relative
            
            &:before {
                content: 'â€” '
                position: absolute
                top: 0
                left: -1.4rem
            }
        }
    }
    
    &--content {
        margin-bottom: 1.7rem
    }
}
.section__paragraph {
    p {
        font-size: 0.8rem
        line-height: 1.9em
        margin-bottom: 5.4rem
        margin-top: 0
    }
}
.section__footer {
    a {
        display: block
        margin-bottom: 3.3rem
        
        &:last-child {
            margin-bottom: 8rem
        }
    }
}
